{
  "name": "real-time-chat-websockets",
  "version": "1.0.0",
  "description": "Chat em tempo real desenvolvido com NestJS e React",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=packages/backend",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "lint": "npm run lint --workspaces",
    "lint:backend": "npm run lint --workspace=packages/backend",
    "lint:frontend": "npm run lint --workspace=packages/frontend",
    "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,md}\"",
    "db:up": "docker-compose -f packages/backend/docker-compose.yml up -d",
    "db:down": "docker-compose -f packages/backend/docker-compose.yml down",
    "db:reset": "npm run db:down && npm run db:up && npm run db:migrate",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:generate": "npm run db:generate --workspace=packages/backend",
    "db:studio": "npm run db:studio --workspace=packages/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "chat",
    "realtime",
    "websocket",
    "nestjs",
    "react",
    "typescript",
    "postgresql",
    "prisma",
    "jwt"
  ],
  "author": "enrick-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/real-time-chat-websockets.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/real-time-chat-websockets/issues"
  },
  "homepage": "https://github.com/seu-usuario/real-time-chat-websockets#readme"
}

